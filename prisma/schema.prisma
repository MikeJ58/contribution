generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Conversation {
  id             Int      @id @default(autoincrement())
  conversationId BigInt   // Use BigInt instead of Int
  role           String
  content        String
  createdAt      DateTime @default(now())
}

